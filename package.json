{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "lerna run test",
        "test:changed": "lerna run test --since",
        "test:common": "lerna run test --scope=@lerna-tut/common",
        "test:related": "lerna run test --scope={@lerna-tut/common,@lerna-tut/server}",
        "new-version": "lerna version --conventional-commits --yes",
        "diff": "lerna diff"
    },
    "devDependencies": {
        "lerna": "^3.22.1"
    },
    "name": "lerna-tut"
}
